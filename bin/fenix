#!/bin/bash
function check_for_update(){
    source "${fenix_script_dir}/preferences.bash"
    local git_remote_version=$(curl -s "https://raw.githubusercontent.com/M1001-byte/FenixManager/master/version")
    local git_local_version=${VERSION}

}

function fenix() {
    local ui_mode="$1"
    local fenix_script_dir="/etc/FenixManager"
    local fenix_menu="${fenix_script_dir}/fenix-menu.bash"
    
    sudo "${fenix_menu}"
}


fenix "$1"